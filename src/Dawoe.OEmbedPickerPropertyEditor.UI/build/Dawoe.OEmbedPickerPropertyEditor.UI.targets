<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <OEmbedPickerPropertyEditorContentFilesPath>$(MSBuildThisFileDirectory)..\content\App_Plugins\Dawoe.OEmbedPickerPropertyEditor\**\*.*</OEmbedPickerPropertyEditorContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOEmbedPickerPropertyEditorContentAssets" BeforeTargets="Build">
        <ItemGroup>
          <OEmbedPickerPropertyEditorContentFiles Include="$(OEmbedPickerPropertyEditorContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying OEmbedPickerPropertyEditor files: $(OEmbedPickerPropertyEditorContentFilesPath) - #@(OEmbedPickerPropertyEditorContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(OEmbedPickerPropertyEditorContentFiles)"
            DestinationFiles="@(OEmbedPickerPropertyEditorContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Dawoe.OEmbedPickerPropertyEditor\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />
    </Target>

    <Target Name="ClearOEmbedPickerPropertyEditorContentAssets" BeforeTargets="Clean">
        <ItemGroup>
          <OEmbedPickerPropertyEditorDir Include="$(MSBuildProjectDirectory)\App_Plugins\Dawoe.OEmbedPickerPropertyEditor\" />
        </ItemGroup>
        <Message Text="Clear old OEmbedPickerPropertyEditor data"  Importance="high" />
        <RemoveDir Directories="@(OEmbedPickerPropertyEditorDir)"  />
    </Target>

</Project>
